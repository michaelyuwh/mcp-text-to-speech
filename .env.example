# Environment configuration for MCP Text-to-Speech Server
# Copy this file to .env and configure your settings

# =============================================================================
# TTS ENGINE CONFIGURATION
# =============================================================================

# Force specific TTS mode (offline, online, auto)
# TTS_MODE=auto

# Force specific offline engine (pyttsx3, espeak, festival, coqui)
# TTS_ENGINE=pyttsx3

# Default language for synthesis
# TTS_DEFAULT_LANGUAGE=en

# Default voice (engine-specific)
# TTS_DEFAULT_VOICE=

# Default speech rate (words per minute)
# TTS_DEFAULT_RATE=150

# =============================================================================
# DIRECTORIES AND CACHING
# =============================================================================

# Output directory for generated audio files
TTS_OUTPUT_DIR=./output

# Cache directory for TTS models and temporary files
TTS_CACHE_DIR=./cache

# Log directory
TTS_LOG_DIR=./logs

# Maximum cache size in MB (0 = unlimited)
TTS_CACHE_SIZE_MB=1000

# Cache retention time in days
TTS_CACHE_RETENTION_DAYS=7

# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================

# Audio output format (wav, mp3, ogg)
TTS_OUTPUT_FORMAT=wav

# Audio sample rate
TTS_SAMPLE_RATE=22050

# Audio channels (1=mono, 2=stereo)
TTS_CHANNELS=1

# Audio bitrate for compressed formats
TTS_BITRATE=128

# =============================================================================
# GOOGLE TTS (gTTS) CONFIGURATION
# =============================================================================

# gTTS is free and doesn't require API keys
# Enable/disable gTTS
GTTS_ENABLED=true

# gTTS top-level domain (affects pronunciation)
GTTS_TLD=com

# gTTS slow speech (true/false)
GTTS_SLOW=false

# =============================================================================
# AZURE COGNITIVE SERVICES CONFIGURATION
# =============================================================================

# Azure Speech Services API key
# Get from: https://portal.azure.com/
# AZURE_SPEECH_KEY=your_azure_speech_key_here

# Azure Speech Services region
# AZURE_SPEECH_REGION=eastus

# Azure Speech endpoint (optional, uses default if not set)
# AZURE_SPEECH_ENDPOINT=

# Default Azure voice
# AZURE_DEFAULT_VOICE=en-US-JennyNeural

# =============================================================================
# AMAZON POLLY CONFIGURATION
# =============================================================================

# AWS Access Key ID
# AWS_ACCESS_KEY_ID=your_aws_access_key_here

# AWS Secret Access Key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# AWS Region
# AWS_DEFAULT_REGION=us-east-1

# Default Polly voice
# POLLY_DEFAULT_VOICE=Joanna

# Polly engine (standard, neural)
# POLLY_ENGINE=neural

# =============================================================================
# IBM WATSON TEXT TO SPEECH CONFIGURATION
# =============================================================================

# IBM Watson API key
# IBM_WATSON_APIKEY=your_watson_api_key_here

# IBM Watson service URL
# IBM_WATSON_URL=https://api.us-south.text-to-speech.watson.cloud.ibm.com

# Default Watson voice
# WATSON_DEFAULT_VOICE=en-US_AllisonV3Voice

# =============================================================================
# COQUI TTS CONFIGURATION
# =============================================================================

# Enable Coqui TTS (requires additional dependencies)
COQUI_TTS_ENABLED=true

# Default Coqui model
COQUI_DEFAULT_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Coqui model cache directory
COQUI_CACHE_DIR=./models/coqui

# Use GPU acceleration if available
COQUI_USE_GPU=false

# =============================================================================
# PYTTSX3 CONFIGURATION
# =============================================================================

# pyttsx3 speech rate (words per minute)
PYTTSX3_RATE=150

# pyttsx3 volume (0.0 to 1.0)
PYTTSX3_VOLUME=0.9

# =============================================================================
# ESPEAK CONFIGURATION
# =============================================================================

# eSpeak voice variant
ESPEAK_VOICE=en

# eSpeak amplitude (0-200)
ESPEAK_AMPLITUDE=100

# eSpeak pitch (0-99)
ESPEAK_PITCH=50

# eSpeak speed (words per minute)
ESPEAK_SPEED=175

# =============================================================================
# FESTIVAL CONFIGURATION
# =============================================================================

# Festival voice
FESTIVAL_VOICE=voice_kal_diphone

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Enable file logging
LOG_TO_FILE=true

# Log file name
LOG_FILE=mcp-tts.log

# Maximum log file size in MB
LOG_MAX_SIZE_MB=10

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum concurrent synthesis requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Enable response compression
ENABLE_COMPRESSION=true

# Maximum text length for synthesis
MAX_TEXT_LENGTH=5000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable CORS (for web interfaces)
ENABLE_CORS=false

# Allowed origins for CORS
CORS_ORIGINS=*

# Enable API rate limiting
ENABLE_RATE_LIMITING=false

# Rate limit (requests per minute)
RATE_LIMIT=60

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable development features
DEVELOPMENT_MODE=false

# Enable hot reloading
HOT_RELOAD=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker container user ID
DOCKER_UID=1001

# Docker container group ID
DOCKER_GID=1001

# Enable Docker health checks
DOCKER_HEALTHCHECK=true

# Health check interval in seconds
HEALTHCHECK_INTERVAL=30
